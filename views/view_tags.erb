<table id="tags">
  <% if @tags.empty? %>
    <p id="tag-message">No tags have been added to this bookmark yet.</p>
  <% else %>
    <% @tags.each do |t| %>
      <tr>
        <td><%= t.content %></td>
        <form action="/tags/<%= t.id %>/bookmarks" method="get">
          <td>
            <button id="bookmarks" title="View Bookmarks">
              <i class="far fa-trash-alt"></i>
            </button>
          </td>
        </form>
      </tr>
    <% end %>
  <% end %>
</table>
  <form action="/bookmarks" method="get">
    <input id="homepage" type="submit" name="view-bookmarks"
    value="Back to Homepage" alt="Button to return to the homepage."/>
  </form>
